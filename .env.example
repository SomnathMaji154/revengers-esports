# Revengers Esports Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration (Required)
# For Render PostgreSQL, get this from your database dashboard
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Session Security (Required - Generate a strong secret)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secure_session_secret_here_minimum_64_characters_long

# Cloudinary Configuration (Required for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Default Admin Credentials (Development only)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password

# Application URLs (Production)
PRODUCTION_URL=https://your-app-name.onrender.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_CONNECTION_TIMEOUT_MS=2000

# Security Configuration
BCRYPT_ROUNDS=12
COOKIE_MAX_AGE_MS=86400000

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_MAX_AGE=3600

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking